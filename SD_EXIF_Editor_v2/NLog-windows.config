<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<variable name="logLevel" value="Warn"/>
	
	<targets>
		<target name="logfile" xsi:type="File" fileName="${basedir}/logs/${shortdate}.log" />
		<target name="logconsole" xsi:type="Console" />
	</targets>

	<rules>
		<logger name="*" minlevel="${var:logLevel}" writeTo="logconsole" />
		<logger name="*" minlevel="${var:logLevel}" writeTo="logfile" />
	</rules>
</nlog>